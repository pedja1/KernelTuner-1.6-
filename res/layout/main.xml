<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:showcase="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".KernelTuner" >

    

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ly2"
        android:layout_below="@+id/rl"
        android:layout_margin="8dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/button2"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_launcher"
                    android:gravity="center|center_vertical"
                    android:text="@string/oc" />

                <Button
                    android:id="@+id/button5"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/times"
                    android:gravity="center|center_vertical"
                    android:text="@string/title_tis" />

                <Button
                    android:id="@+id/button6"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/voltage"
                    android:gravity="center|center_vertical"
                    android:text="@string/title_voltage" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/button10"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/dual"
                    android:gravity="center|center_vertical"
                    android:text="@string/governor_" />

                <Button
                    android:id="@+id/button4"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/misc"
                    android:gravity="center|center_vertical"
                    android:text="@string/title_misc" />

                <Button
                    android:id="@+id/button12"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/profile"
                    android:gravity="center|center_vertical"
                    android:text="@string/profiles" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/button13"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/swap"
                    android:gravity="center|center_vertical"
                    android:text="OOM" />

                <Button
                    android:id="@+id/sd"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/sd"
                    android:gravity="center|center_vertical"
                    android:text="SD Tweaks" />

                <Button
                    android:id="@+id/swap"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/swap"
                    android:gravity="center|center_vertical"
                    android:text="Swap" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                

                <Button
                    android:id="@+id/button14"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/info"
                    android:gravity="center|center_vertical"
                    android:text="@string/info" />

                <Button
                    android:id="@+id/changelog"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/changelog"
                    android:gravity="center|center_vertical"
                    android:text="Changelog" />
                <Button
                    android:id="@+id/button15"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/about"
                    android:gravity="center|center_vertical"
                    android:text="@string/title_about" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!--
         <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/alert_dark_frame" />
    -->

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/ptextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/cpuLoad"
            android:layout_marginTop="3dp"
            android:text="@string/cpu0" />

        <TextView
            android:id="@+id/ptextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ptextView1"
            android:layout_marginTop="3dp"
            android:text="@string/cpu1" />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ptextView1"
            android:layout_alignParentTop="false"
            android:layout_toRightOf="@+id/ptextView1"
            android:max="100"
            android:progress="3" />

        <TextView
            android:id="@+id/ptextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/cpuLoad"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="@string/offline"
            android:textColor="#ffffffff" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ptextView2"
            android:layout_toRightOf="@+id/ptextView2"
            android:max="100"
            android:progress="3" />

        <TextView
            android:id="@+id/ptextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ptextView3"
            android:layout_below="@+id/progressBar1"
            android:layout_marginTop="3dp"
            android:text="@string/offline"
            android:textColor="#ffffffff" />

        <TextView
            android:id="@+id/cpuLoad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cpu_load" />

        <ProgressBar
            android:id="@+id/progressBar5"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cpuLoad"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/cpuLoad" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/n_a"
            android:textColor="#ffffffff" />
    </RelativeLayout>

    
    <LinearLayout
        android:id="@+id/ly2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ly3" >

        <Button
            android:id="@+id/button1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/activity_main_cpu1_on_off" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <com.google.ads.AdView
            android:id="@+id/ad"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="a15056d54ca9d71"
            ads:testDevices="TEST_EMULATOR, 3CE20BB714ED336822A2508B26BBC32B" />

        <!-- ads:loadAdOnCreate="true" -->

    </LinearLayout>
    
    

</RelativeLayout>